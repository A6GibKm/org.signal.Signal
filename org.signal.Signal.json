{
    "app-id": "org.signal.Signal",
    "base": "io.atom.electron.BaseApp",
    "base-version": "stable",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "command": "signal",
    "separate-locales": false,
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--device=dri",
        "--filesystem=home",
        "--talk-name=org.freedesktop.Notifications"
    ],
    "modules": [
        {
            "name": "signal-desktop",
            "buildsystem": "simple",
            "build-commands": [
                "install apply_extra /app/bin",
                "install signal.sh /app/bin/signal",
                "install -Dm644 org.signal.Signal.appdata.xml /app/share/appdata/org.signal.Signal.appdata.xml",
                "cp /usr/bin/ar /app/bin",
                "cp /usr/lib/libbfd-*.so /app/lib"
            ],
            "sources": [
                {
                    "type": "extra-data",
                    "filename": "signal.deb",
                    "only-arches": ["x86_64"],
                    "url": "https://updates.signal.org/desktop/apt/pool/main/s/signal-desktop/signal-desktop_1.0.35_amd64.deb",
                    "sha256": "d9f9d4d54f4121efc8eadf1cf0ff957828088b313e53b66dc540b851c44c1860",
                    "size": 94683874
                },
                {
                    "type": "script",
                    "dest-filename": "apply_extra",
                    "commands": [
                        "ar x signal.deb",
                        "rm -f signal.deb",
                        "tar xf data.tar.xz",
                        "rm -f control.tar.gz data.tar.xz debian-binary",
                        "mv usr/* .",
                        "mv opt/* .",
                        "rmdir usr opt",
                        "chmod -R a-s,go+rX,go-w .",
                        "mkdir -p export/share/applications",
                        "sed 's|Icon=signal-desktop|Icon=org.signal.Signal|; s|Exec=.*|Exec=signal %U|' share/applications/signal-desktop.desktop > export/share/applications/org.signal.Signal.desktop",
                        "mkdir -p export/share/icons/hicolor/512x512/apps",
                        "cp share/icons/hicolor/512x512/apps/signal-desktop.png export/share/icons/hicolor/512x512/apps/org.signal.Signal.png"
                    ]
                },
                {
                    "type": "script",
                    "dest-filename": "signal.sh",
                    "commands": [
                        "exec env TMPDIR=$XDG_CACHE_HOME /app/extra/Signal/signal-desktop \"$@\""
                    ]
                },
                {
                    "type": "file",
                    "path": "org.signal.Signal.appdata.xml"
                }
            ]
        }
    ]
}
